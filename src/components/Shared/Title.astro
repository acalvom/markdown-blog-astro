---
interface Props {
  title: string
  subtitle?: string
}

const { title, subtitle } = Astro.props
---

<div class="mx-auto my-8 px-6 md:px-2 text-center lg:mb-10">
  <h2 class="mb-4 text-3xl lg:text-4xl font-extrabold tracking-tight text-white">
    {title}
  </h2>
  <p class="lg:text-xl text-sm text-center font-light tracking-wide text-gray-300">
    {subtitle}
  </p>
</div>
